@* @model First_Dotnet.Models.Student *@
@model IEnumerable<First_Dotnet.Models.Student>

@{
    ViewData["Title"] = "หน้าแรก";
}

@if (Model.Count() > 0)
{
    <h1 class="text-center">คะแนนสอบวิชาคอมพิวเตอร์</h1>
    <table class="table">
        <thead>
            <tr>
                <th>รหัสนักเรียน</th>
                <th>ชื่อนักเรียน</th>
                <th>คะแนนสอบ</th>
                <th>แก้ไข</th>
                <th>ลบ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    <td>
                        <a class="btn btn-warning" 
                            asp-asp-controller="Student"
                            asp-action="Edit"
                            asp-route-id="@student.Id"
                        >
                            แก้ไข
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" 
                            asp-asp-controller="Student"
                            asp-action="Delete"
                            asp-route-id="@student.Id"
                            onclick="return confirm('คุณต้องการลบ @student.Name หรือไม่ ?')"
                        >
                            ลบ
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert-secondary">ไม่มีข้อมูลนักเรียนในระบบ</div>
}

